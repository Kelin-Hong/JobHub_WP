<UserControl x:Class="JobHub.Controls.Main_WeiboItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="255" d:DesignWidth="360">
    
    <Grid x:Name="LayoutRoot" Margin="10,0,0,12">
        <Image  Source="{Binding Cover}"/>
        <Rectangle Height="85" Opacity="0.9"  VerticalAlignment="Bottom" Fill="#5db5e6" />
        <TextBlock  Margin="26" FontSize="26" FontWeight="Bold" VerticalAlignment="Bottom"  Text="{Binding Title}"/>
        <Image Margin="20" HorizontalAlignment="Right" Width="48" VerticalAlignment="Bottom" Source="{Binding IC_Forward, Source={StaticResource MultiResImageChooser}}"/>
        

    </Grid>
</UserControl>
